 <div id="modal-status" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h2 class="uk-modal-title">Cadastrar Status - Banco</h2>
        </div>
        <div class="uk-modal-body">
            <form action="/cadastrarStatus" method="post" class="uk-grid-small" uk-grid>
                <div class="uk-margin uk-width-1-1">
                    <label class="uk-form-label" for="form-stacked-text">Nome Status:</label>
                    <input class="uk-input" name="nome_agente" type="text" placeholder="Nome:">
                </div>
                <div class="uk-margin uk-width-1-1">
                    <label class="uk-form-label" for="form-stacked-text">Banco:</label>
                    <input class="uk-input" name="banco" type="text" placeholder="Banco">
                </div>
            </div>   
                <div class="uk-modal-footer uk-text-right">
                    <button class="uk-button uk-button-default uk-modal-close" type="button">Cancelar</button>
                    <button class="uk-button uk-button-primary" type="submit">Salvar</button>
                </div>
            </form>         
    </div>
</div>
