<div id="modal-usuario" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Cadastrar Usuario</h3>
        </div>
        <div class="uk-modal-body">
            <form action="/cadastrarUsuario" method="post" class="uk-grid-small" uk-grid>
                    <label class="uk-form-label" for="form-stacked-text">Usuario:</label>
                <div class="uk-margin uk-width-1-1">
                    <input class="uk-input" name="nome_usuario" type="text" placeholder="Nome: 0000usuario">
                </div>    
                <label class="uk-form-label" for="form-stacked-text">Senha:</label>
                <div class="uk-margin uk-width-1-1 uk-inline">
                        <input class="uk-input" name="senha_usuario" id="senha" type="password" placeholder="Senha">
                        <a class="uk-form-icon uk-form-icon-flip" id="olho" href="#" uk-icon="icon: pencil"></a>                    
                </div>
                    <label class="uk-form-label" for="form-stacked-text">Confirmar Senha:</label>
                <div class="uk-margin uk-width-1-1  uk-inline">
                    <input class="uk-input" name="senha" id="confirma" onkeyup="chek(this)" type="password" placeholder="Confirmar Senha">
                    
                    <a class="uk-form-icon uk-form-icon-flip" id="olho_confirm" href="#" uk-icon="icon: pencil"></a> 
                    
                </div>
                <span id="chek"></span>
                <div class="uk-margin uk-width-1-1">
                    <label class="uk-form-label" for="form-stacked-text">Tipo:</label>
                    <select name="tipo" id="" class="uk-select">
                        <option value="1">Administrador</option>
                        <option value="2">Usuario Normal</option>
                    </select>
                </div>
            </div>   
                <div class="uk-modal-footer uk-text-right">
                    <button class="uk-button uk-button-default uk-modal-close" type="button">Cancelar</button>
                    <button class="uk-button" id="btn-save" type="submit">Salvar</button>
                </div>
            </form>         
    </div>
</div>

<script>

    function confirmacao(senha) {
        var senha_1 = document.getElementById('senha').value
        console.log(senha)
        console.log(senha_1)
        if (senha == senha_1) {
            return true
        }
        else{
            return false
        }
    }

    function chek(senha) {
        document.getElementById('chek').innerHTML = confirmacao(senha.value)? '<span class="uk-label uk-label-success">Senhas Ok</span>' : '<span class="uk-label uk-label-danger">Senhas Diferentes</span>';
        if(senha.value=='') document.getElementById('chek').innerHTML = '';

        document.getElementById('btn-save').innerHTML = confirmacao(senha.value)? '<button class="uk-button uk-button-primary" type="submit">Salvar</button>' : '<button class="uk-button uk-button-primary" type="submit" disabled>Salvar</button>';
        if(senha.value=='') document.getElementById('btn-save').innerHTML = '<button class="uk-button uk-button-primary" type="submit" disabled>Salvar</button>';

    }


</script>
